# Google Cloud Storage
GOOGLE_APPLICATION_CREDENTIALS=gcs-credential.json
GCS_PROJECT_ID=your-gcp-project-id
GCS_BUCKET_NAME=fg-video

# Database (Neon PostgreSQL)
# Get this from Neon dashboard or use your own PostgreSQL instance
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# Network Configuration (for local development)
HOST=0.0.0.0
PORT=8000
# Add your frontend URLs here, separated by commas
CORS_ORIGINS=http://localhost:3000,http://localhost:8081

# API Base URL for frontend (update with your local IP for device testing)
EXPO_PUBLIC_API_BASE_URL=http://localhost:8000/api/v1

# Google Gemini AI Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key

# OpenAI API Configuration for TTS
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key

# ElevenLabs API Configuration for TTS (optional)
# Get your API key from: https://elevenlabs.io/
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# Security (auto-generated, no need to change for development)
SECRET_KEY=generate-a-secure-secret-key
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Configuration (optional, for authentication)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com
FROM_NAME=FutureGolf

# OAuth Providers (optional, for social login)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Environment
ENVIRONMENT=development